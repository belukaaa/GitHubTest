<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_alignParentBottom="true"
    >


    <ImageView

        android:id="@+id/xoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="@+id/dateCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateCalendar"
        app:layout_constraintTop_toTopOf="@+id/dateCalendar"
        app:srcCompat="@drawable/xoo" />

    <TextView
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/back_to_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="64dp"
        android:text="@string/back"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="13dp"
        android:layout_height="21dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/asd"
        app:layout_constraintBottom_toBottomOf="@+id/back_to_tasks"
        app:layout_constraintEnd_toStartOf="@+id/back_to_tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_to_tasks" />

    <TextView
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="296dp"
        android:text="@string/stuff_to_do"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_to_tasks" />

    <TextView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/date_picker"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:fontFamily="@font/ubuntu_bold"
        android:id="@+id/Task_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="49dp"
        android:layout_weight="1"
        android:background="@null"
        android:focusable="true"
        android:hint="Type your text here"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textCursorDrawable="@drawable/sticky"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">


        <requestFocus />
    </EditText>

    <Button

        android:id="@+id/oval1"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button"
        app:layout_constraintEnd_toStartOf="@+id/oval2"
        app:layout_constraintStart_toStartOf="@+id/Task_input"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval2"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button1"
        app:layout_constraintEnd_toStartOf="@+id/oval3"
        app:layout_constraintStart_toEndOf="@+id/oval1"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button2"
        app:layout_constraintEnd_toStartOf="@+id/oval4"
        app:layout_constraintStart_toEndOf="@+id/oval2"
        app:layout_constraintTop_toBottomOf="@id/Task_input" />

    <Button

        android:id="@+id/oval4"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button3"
        app:layout_constraintEnd_toStartOf="@+id/oval5"
        app:layout_constraintStart_toEndOf="@+id/oval3"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval5"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button4"
        app:layout_constraintEnd_toStartOf="@+id/oval6"
        app:layout_constraintStart_toEndOf="@+id/oval4"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval6"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button6"
        app:layout_constraintEnd_toStartOf="@+id/oval7"
        app:layout_constraintStart_toEndOf="@+id/oval5"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval7"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button7"
        app:layout_constraintEnd_toStartOf="@+id/oval8"
        app:layout_constraintStart_toEndOf="@+id/oval6"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval8"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_button8"
        app:layout_constraintEnd_toStartOf="@+id/oval9"
        app:layout_constraintStart_toEndOf="@+id/oval7"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button

        android:id="@+id/oval9"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/round_button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oval8"
        app:layout_constraintTop_toBottomOf="@+id/Task_input" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/onboarding_button"
        android:fontFamily="@font/ubuntu_medium"
        android:text="   Save   "
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/oval6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Cancel"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/cancel_selecting2"
        app:layout_constraintTop_toBottomOf="@+id/oval2" />

    <TextView
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@android:color/black"
        tools:text="traki"
        android:textSize="16sp"

        android:textStyle="bold"
        android:id="@+id/dateCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar"
        app:layout_constraintEnd_toStartOf="@+id/calendar"
        app:layout_constraintTop_toTopOf="@+id/calendar" />

    <ImageView
        android:id="@+id/cancel_selecting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:srcCompat="@drawable/gone_taskk" />




</androidx.constraintlayout.widget.ConstraintLayout>

